import matplotlib.pyplot as plt
import numpy as np

# Placeholder data for 12 months
months = range(1, 13)
sales = np.random.randint(100, 500, 12) # Replace with your actual data

plt.figure(figsize=(10, 6))
plt.bar(months, sales) # Changed to bar chart
plt.title('Monthly Sales Over a Year')
plt.xlabel('Month')
plt.ylabel('Sales')
plt.xticks(months)
plt.grid(True)
plt.show()
